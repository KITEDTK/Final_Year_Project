generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_URL")
}

model Clothes {
  id           String         @id @default(uuid())
  name         String
  category     Categories     @relation(fields: [categoryId], references: [id])
  categoryId   String
  brand        String
  location     String?
  createAt     DateTime       @default(now())
  updateAt     DateTime?
  isEnable     Boolean        @default(true)
  clothDetails ClothDetails[]
  commets      Comments[]
}

model Sizes {
  id           String         @id @default(uuid())
  name         String
  createAt     DateTime       @default(now())
  updateAt     DateTime?
  isEnable     Boolean        @default(true)
  clothDetails ClothDetails[]
}

model Colors {
  id          String         @id @default(uuid())
  name        String
  createAt    DateTime       @default(now())
  updateAt    DateTime?
  isEnable    Boolean        @default(true)
  clothDetail ClothDetails[]
}

model Categories {
  id       String       @id @default(uuid())
  name     String
  parentId String?      @map("parent_id")
  parent   Categories?  @relation("CategoryToCategory", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children Categories[] @relation("CategoryToCategory")
  createAt DateTime     @default(now())
  updateAt DateTime?
  isEnable Boolean      @default(true)
  Clothes  Clothes[]
}

model ClothDetails {
  id             String           @id @default(uuid())
  size           Sizes            @relation(fields: [sizeId], references: [id])
  sizeId         String
  color          Colors           @relation(fields: [colorId], references: [id])
  colorId        String
  codeBar        String?          @unique
  cloth          Clothes          @relation(fields: [clothId], references: [id])
  clothId        String
  amount         Int
  createAt       DateTime         @default(now())
  updateAt       DateTime?
  isEnable       Boolean          @default(true)
  paymentDetails PaymentDetails[]
  carts    Carts[]
  refunds        Refunds[]
}

model Users {
  id               String            @id @default(uuid())
  username         String?           @unique
  password         String?
  fullname         String?
  email            String?           @unique
  phoneNumber      String?
  point            Int?              @default(0)
  verifyToken      String?
  expiredTokenTime DateTime?
  createAt         DateTime?         @default(now())
  updateAt         DateTime?
  isEnable         Boolean?          @default(true)
  comments         Comments[]
  carts            Carts[]
  payments         Payments[]
  permissions      UserPermissions[]
  vouchers         UserVouchers[]
  refunds          Refunds[]
}

model Permissions {
  id       String            @id @default(uuid())
  name     String
  createAt DateTime          @default(now())
  updateAt DateTime?
  isEnable Boolean           @default(true)
  users    UserPermissions[]
}

model UserPermissions {
  id           String      @id @default(uuid())
  users        Users       @relation(fields: [userIds], references: [id])
  userIds      String
  permissions  Permissions @relation(fields: [permissionId], references: [id])
  permissionId String
  createAt     DateTime    @default(now())
  updateAt     DateTime?
  isEnable     Boolean     @default(true)
}

model Vouchers {
  id       String         @id @default(uuid())
  code     String         @unique
  name     String
  minUsage Int
  discount Int
  users    UserVouchers[]
  payments Payments[]
  createAt DateTime       @default(now())
  updateAt DateTime?
  isEnable Boolean        @default(true)
}

model UserVouchers {
  id        String    @id @default(uuid())
  users     Users     @relation(fields: [userId], references: [id])
  userId    String
  vouchers  Vouchers  @relation(fields: [voucherId], references: [id])
  voucherId String
  createAt  DateTime  @default(now())
  updateAt  DateTime?
  isEnable  Boolean   @default(true)
}

model Payments {
  id             String           @id @default(uuid())
  user           Users            @relation(fields: [userId], references: [id])
  userId         String
  voucher        Vouchers         @relation(fields: [voucherId], references: [id])
  voucherId      String
  total          Int
  isPaid         Boolean          @default(false)
  paymentDetails PaymentDetails[]
  createAt       DateTime         @default(now())
  updateAt       DateTime?
  isEnable       Boolean          @default(true)
}

model PaymentDetails {
  id          String       @id @default(uuid())
  payment     Payments     @relation(fields: [paymentId], references: [id])
  clothDetail ClothDetails @relation(fields: [clothId], references: [id])
  paymentId   String
  clothId     String
  createAt    DateTime     @default(now())
  updateAt    DateTime?
  isEnable    Boolean      @default(true)
}

model Carts {
  id            String       @id @default(uuid())
  users         Users        @relation(fields: [userId], references: [id])
  userId        String
  clothDetails ClothDetails @relation(fields: [clothDetailId], references: [id])
  clothDetailId String
  isPaid   Boolean      @default(false)
  amount        Int
  createAt      DateTime     @default(now())
  updateAt      DateTime?
  isEnable      Boolean      @default(true)
}

model Comments {
  id       String     @id @default(uuid())
  user     Users      @relation(fields: [userId], references: [id])
  userId   String
  content  String
  cloth    Clothes    @relation(fields: [clothId], references: [id])
  clothId  String
  parentId String?    @map("parent_id")
  parent   Comments?  @relation("CommentsToComments", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  children Comments[] @relation("CommentsToComments")
  createAt DateTime   @default(now())
  updateAt DateTime?
  isEnable Boolean    @default(true)
}

model Refunds {
  id            String       @id @default(uuid())
  clotDetails   ClothDetails @relation(fields: [clothDetailId], references: [id])
  clothDetailId String
  user          Users        @relation(fields: [userId], references: [id])
  userId        String
  barcode       String?
  total         Int
  createAt      DateTime     @default(now())
  updateAt      DateTime?
  isEnable      Boolean      @default(true)
}
